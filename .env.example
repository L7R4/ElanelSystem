# ==============================
# ElanelSystem - Docker (DEV)
# ==============================
#
# Copiá este archivo como .env si querés personalizar valores.
# Con los valores por defecto ya debería levantar con:
#   docker compose up --build

# Django core
SECRET_KEY=dev-insecure-change-me
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de datos PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=elanelsys_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Correo SMTP (solo para que el settings no falle; la app no conecta al iniciar)
EMAIL_HOST=localhost
EMAIL_USE_SSL=False
EMAIL_PORT=25
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Usuario inicial (se crea/actualiza en el seed)
DJANGO_SUPERUSER_EMAIL=admin@local.test
DJANGO_SUPERUSER_PASSWORD=admin1234
DJANGO_SUPERUSER_NAME=Admin Local
DJANGO_SUPERUSER_DNI=00000000
DJANGO_SUPERUSER_RANGO=Admin
DJANGO_SUPERUSER_C=1234

# Sucursal inicial (se crea/actualiza en el seed)
DEFAULT_SUCURSAL_DIRECCION=Av. Demo 123
DEFAULT_SUCURSAL_HORA_APERTURA=08:00
DEFAULT_SUCURSAL_PROVINCIA=Corrientes
DEFAULT_SUCURSAL_LOCALIDAD=Corrientes
