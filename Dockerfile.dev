# Dockerfile.dev
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Paquetes del SO (incluye deps para WeasyPrint/PDF)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential libpq-dev \
    libcairo2 libpango-1.0-0 libpangoft2-1.0-0 \
    libharfbuzz0b libharfbuzz-subset0 \
    libgdk-pixbuf-2.0-0 shared-mime-info \
    curl git && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Montamos el código con volumen en compose (no copiamos aquí)
EXPOSE 8000

CMD ["bash", "-lc", "python elanelsystem/manage.py runserver 0.0.0.0:8000"]
